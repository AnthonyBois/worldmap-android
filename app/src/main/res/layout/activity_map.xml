<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#222"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:id="@+id/adresse"
        android:textColor ="#ededed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" />

    <Button android:id="@+id/btnPlus"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adresse"
        android:text= "Afficher les dÃ©tails"
        android:textColor ="#000"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:onClick="requestDetails" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPlus"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/name"
        android:layout_width="150dip"
        android:textColor ="#ededed"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webview"
        android:layout_centerHorizontal="true"
        android:text="" />
    <TextView
        android:id="@+id/capital"
        android:layout_width="150dip"
        android:textColor ="#ededed"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:text="" />
    <TextView
        android:id="@+id/continent"
        android:layout_width="150dip"
        android:textColor ="#ededed"
        android:layout_height="wrap_content"
        android:layout_below="@+id/capital"
        android:layout_centerHorizontal="true"
        android:text="" />
    <TextView
        android:id="@+id/population"
        android:layout_width="150dip"
        android:textColor ="#ededed"
        android:layout_height="wrap_content"
        android:layout_below="@+id/continent"
        android:layout_centerHorizontal="true"
        android:text="" />
    <TextView
        android:id="@+id/monnaie"
        android:layout_width="150dip"
        android:textColor ="#ededed"
        android:layout_height="wrap_content"
        android:layout_below="@+id/population"
        android:layout_centerHorizontal="true"
        android:text="" />




</RelativeLayout>